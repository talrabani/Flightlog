{{! home.hbs - Pilot Logbook Statistics }}
<head>
    <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
{{> nav }}
<div class="container mt-5">
    <h2 class="text-center mb-4">Flight Log Statistics</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Hours Flown This Month</h5>
                    <p class="card-text display-4">{{hoursThisMonth}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Hours Flown This Year</h5>
                    <p class="card-text display-4">{{hoursThisYear}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Lifetime Hours</h5>
                    <p class="card-text display-4">{{lifetimeHours}}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Most Popular Airport</h5>
                    <p class="card-text display-5">{{popularAirport}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Most Flown Plane This Month</h5>
                    <p class="card-text display-5">{{popularPlane}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Longest Flight This Month</h5>
                    <p class="card-text display-5">{{longestFlight}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
